<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main"
    android:background="@color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="@dimen/_150sdp">
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/main_wheel_left"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#00000000"
            aigestudio:wheel_atmospheric="true"
            aigestudio:wheel_curved="true"
            aigestudio:wheel_cyclic="true"
            aigestudio:wheel_item_align="center"
            aigestudio:wheel_item_space="20dp"
            aigestudio:wheel_item_text_color="#000000"
            aigestudio:wheel_item_text_size="16sp"
            aigestudio:wheel_selected_item_text_color="#eeeeee"
            aigestudio:wheel_visible_item_count="6" />
    </RelativeLayout>



</RelativeLayout>
